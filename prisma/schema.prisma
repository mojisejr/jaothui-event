// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId        String          @id @unique
  name          String
  email         String?
  tel           String
  role          String
  EventRegister EventRegister[]
}

model EventRegister {
  id         Int      @id @default(autoincrement())
  eventId    Int
  type       String
  level      String
  name       String
  gender     String
  color      String
  birthday   String
  microchip  String
  imageUrl   String
  vaccineUrl String
  ownerName  String
  ownerTel   String
  userId     String
  metadata   String[]
  user       User     @relation(fields: [userId], references: [userId])
  event      Event    @relation(fields: [eventId], references: [id])
}

model Event {
  id            Int             @id @default(autoincrement())
  name          String
  description   String
  startAt       DateTime
  endAt         DateTime
  eventAt       DateTime
  location      String?
  facebook      String?
  twitter       String?
  website       String?
  isActive      Boolean         @default(true)
  imageUrl      String?
  metadata      String[]
  EventRegister EventRegister[]
}

model VoteEvent {
  id    Int     @id
  name  String
  Votes Votes[]
}

model Votes {
  id        Int       @id @default(autoincrement())
  name      String
  microchip String    @unique
  imageUrl  String?
  eventId   Int
  event     VoteEvent @relation(fields: [eventId], references: [id])
  Voters    Voters[]
}

model Voters {
  id      Int    @id @default(autoincrement())
  userId  String @unique
  voteFor Votes  @relation(fields: [votesId], references: [id])
  votesId Int
}
